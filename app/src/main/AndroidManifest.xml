<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".fhir.FhirApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Surveillance"
        tools:targetApi="31">
        <activity
            android:name=".clients.SyncActivity"
            android:exported="false"
            android:label="Data Sync"
            android:theme="@style/Theme.Surveillance.NoActionBar" />
        <activity
            android:name=".ui.patients.SummarizedActivity"
            android:exported="false"
            android:label="Case Summary " />
        <activity
            android:name=".cases.CaseListingActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LauncherActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Surveillance.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".clients.AddParentCaseActivity"
            android:exported="false"
            android:label="New Case"
            android:theme="@style/Theme.Surveillance.NoActionBar" />
        <activity
            android:name=".ui.patients.FullCaseDetailsActivity"
            android:exported="false"
            android:label="Case Summary " />
        <activity
            android:name=".ui.patients.CaseDetailsActivity"
            android:exported="false"
            android:label="Case Details" />
        <activity
            android:name=".ui.patients.AddCaseActivity"
            android:exported="false"
            android:label="New Case"
            android:theme="@style/Theme.Surveillance.NoActionBar" />
        <activity
            android:name=".ui.patients.ClientDetailsActivity"
            android:exported="false"
            android:label="Case Details" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Surveillance.FullScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Surveillance.NoActionBar" />
    </application>

</manifest>